{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Getting Started</h1>

    {% for entity in entities %}
        <div class="col-sm-2 well" style="height:80vh;">
            <a href="{{ path('theme_show', { 'id': entity.id }) }}" class="">
            <img src="{{ entity.image }}" class="img-responsive img-rounded" alt="Watershed UGA logo">
            <h2>
                {{ entity.name }}
            </h2>
            <p>
                {{ entity.description|raw }}
            </p>
            </a>
            {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-default" href="{{ path('theme_edit', { 'id': entity.id }) }}">Edit</a>{% endif %}
        </div>
    {% endfor %}

{% endblock %}
