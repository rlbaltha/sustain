{% extends 'AppBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('bundles/app/js/bootstrap-filestyle.min.js') }}"></script>
<script language="javascript">
    $(document).ready(function () {
        $(":file").filestyle();
        $('#sustain_appbundle_filetype_file').on('change', function () {
            var filename = $('input[type=file]').val().replace(/C:\\fakepath\\/i, '');
            var file = filename.substr(0, filename.lastIndexOf('.')) || filename;
            $('#sustain_appbundle_filetype_name').val(file);
            var a=(this.files[0].size/1024/1024);
            var filesize = Math.round(a * 100) / 100
            if(a > 10) {
                alert('Your file is ' + filesize + ' MB.  It must be no larger than 10 MB.');
            };
        });
    });
</script>
{% endblock %}

{% block body -%}

    {{ form(form) }}

{% endblock %}
