{% extends '::base.html.twig' %}

{% block body -%}
    <div class="col-sm-10">
        <h1>Carousel</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Headline</th>
                <td>{{ entity.headline }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ entity.body | raw }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img-responsive" src="{{ entity.image }}"></td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('carousel') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('carousel_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
