{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Carousel list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Headline</th>
                <th>Body</th>
                <th>Image</th>
                <th>Url</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('carousel_show', { 'id': entity.id }) }}">{{ entity.headline }}</a></td>
                <td>{{ entity.body }}</td>
                <td>{{ entity.image }}</td>
                <td>{{ entity.url }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('carousel_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('carousel_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('carousel_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
