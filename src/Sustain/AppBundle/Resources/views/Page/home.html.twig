{% extends '::base.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-sm-12 " style="background-color: #82D3EE; margin-top: -20px;  padding:10px;">
            <div class="panel panel-default col-sm-4 pull-right" style="margin-top:15px;">
                <div class="panel-body">
                    <strong>Join our mailing list!</strong>

                    <p>Please send your name and email to <strong>watershed@uga.edu</strong> to get email updates on Watershed UGA. Please note if you are a
                        student,
                        a member of the community, or a faculty member in the email. </p>
                </div>
            </div>
            <img src="{{ asset('bundles/app/images/banner_home.png') }}" class="img-responsive" alt="Watershed UGA logo" style="max-height: 160px;">

        </div>
        <div class="col-sm-12 " style="padding: 15px; background-color: white; border: solid 1px #e7e7e7 ">
            <strong>What is Watershed UGA?</strong>
            A town & gown initiative to involve UGA campus and Athens community in restoring our streams. We are transforming these streams into a living
            laboratory through teaching, research, and service.
        </div>
    </div>


    <div class="row " style="padding:30px;">

        <div class="col-sm-8">

            <div class="col-sm-6">
                <a style="padding-top: 20px;" href="{{ path('page_stories') }}">See All the Watershed Stories</a>

                <h3>Watch our Introductory Video</h3>

                <div class="embed-responsive embed-responsive-4by3">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/mZvlSWSNsJw?rel=0" frameborder="0" allowfullscreen></iframe>
                </div>

            </div>

            {% for page in pages %}
                <div class="col-sm-6">
                    <h3>{{ page.teaserImageCaption }}</h3>
                    <a href="{{ path('page_show', {id:page.id}) }}" title="Read more about {{ page.menuName }} ">
                        <img src="{{ page.teaserImage }}" class="img-responsive img-thumbnail" alt="{{ page.menuName }}">
                    </a>

                    <div class="caption">
                        <p>{{ page.teaser|raw }}</p>
                    </div>
                    <a href="{{ path('page_show', {id:page.id}) }}" title="Read more about {{ page.menuName }} ">
                        Read more about {{ page.teaserImageCaption }}
                    </a>
                </div>
            {% endfor %}

        </div>


        <div class="col-sm-4">

            <a class="twitter-timeline" href="https://twitter.com/WatershedUGA" data-widget-id="644610687554162689">Tweets by @WatershedUGA</a>
            <script>!function (d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https';
                    if (!d.getElementById(id)) {
                        js = d.createElement(s);
                        js.id = id;
                        js.src = p + "://platform.twitter.com/widgets.js";
                        fjs.parentNode.insertBefore(js, fjs);
                    }
                }(document, "script", "twitter-wjs");</script>

            <h3>Watershed UGA Events This Week</h3>
            <a class="" href="{{ path('event') }}">All Upcoming Events</a>
            {% for event in events %}
                <div class="panel panel-default">
                    <div class="panel-heading">

                        {{ event.start|date("l, F d") }} {% if event.start|date("g:i A") == "12:00 AM" %}{% else %}{{ event.start|date("g:i A") }}{% endif %}
                    </div>
                    <div class="panel-body">
                        <h3>{{ event.title }}</h3>

                        <p>{{ event.description|raw }}</p>
                    </div>
                </div>
            {% else %}
                <div class="panel-body">
                    <p>There are no events this week. Please check back soon.</p>
                </div>
            {% endfor %}


        </div>

    </div>

{% endblock %}
