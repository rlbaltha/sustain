{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Pages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Menu Name</th>
                <th>Section</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('page_show', { 'id': entity.id }) }}">{{ entity.menuName }}</a></td>
                <td>{%  if entity.homepage == true %}Homepage{% endif %}</td>
                <td>{% if is_granted('ROLE_ADMIN') %}<a class="btn btn-default" href="{{ path('page_edit', { 'id': entity.id }) }}">Edit</a>{% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
