{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Labels</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Color</th>
                <th>Sortorder</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.sortorder }}</td>
                <td>{% if is_granted('ROLE_ADMIN') %}<a class="btn btn-default" href="{{ path('tag_edit', { 'id': entity.id }) }}">Edit</a>{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
