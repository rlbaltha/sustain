{% extends 'AppBundle::layout.html.twig' %}

{% block title %}{{ application_name }} Partners and Internships {% endblock %}

{% block body -%}
    <div class="col-sm-10">
        <h1>Partners/Internships</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary pull-right" href="{{ path('opportunity_new') }}">New Opportunity</a>
        {% endif %}

        {% for entity in entities %}
            <div class="card">
                <div class="card-block"
                <h2>{{ entity.title }}</h2>

                <p>{{ entity.teaser|raw }}</p>
                {% if entity.description != '' %}
                    <p>
                        <a href="{{ path('opportunity_show', { 'id': entity.id }) }}">Read the full description.</a>
                    </p>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-primary" href="{{ path('opportunity_edit', { 'id': entity.id }) }}">Edit</a>
                {% endif %}
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}
