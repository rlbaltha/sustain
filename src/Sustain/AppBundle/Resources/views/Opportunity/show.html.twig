{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <div class="col-sm-10">
        <h1>Service Opportunities/Internships</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary pull-right" href="{{ path('opportunity_new') }}">New Opportunity</a>
        {% endif %}

        <h2>{{ entity.title }}</h2>

        <p>{{ entity.description|raw }}</p>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('opportunity_edit', { 'id': entity.id }) }}">Edit</a>
        {% endif %}
    </div>
{% endblock %}
