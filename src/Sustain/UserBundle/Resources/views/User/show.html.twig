{% extends '::base.html.twig' %}

{% block body -%}

    <div class="well col-sm-12">
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        {% if is_granted('ROLE_ADMIN') or app.user.username==entity.username %}
            <a class="btn btn-default pull-right" href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a>
        {% endif %}
        {% endif %}

        <h1>{{ entity.firstname }} {{ entity.lastname }}</h1>

        <img src="{{ entity.photo }}" class="pull-right img-rounded img-responsive" alt="Responsive image of {{ entity.firstname }} {{ entity.lastname }}">
        <h2>Bio</h2>
        {{ entity.bio|raw }}
        <h2>School/College</h2>
        {{ entity.college|raw }}
        <h2>Research</h2>
        {{ entity.research|raw }}
        {% if entity.involvement !='' %}
        <h2>Involvement in Watershed UGA</h2>
        {{ entity.involvement|raw }}
        {% endif %}
        {% if entity.courses !='' %}
        <h2>Courses incorporating Watershed UGA</h2>
        {{ entity.courses|raw }}
        {% endif %}
        {% if entity.collaboration !='' %}
        <h2>Collaboration with other faculty</h2>
        {{ entity.collaboration|raw }}
        {% endif %}
        <hr/>

        {% if entity.mentor == 0 %}<p><strong>I am willing to mentor CURO projects</strong></p>{% endif %}
        <p>My profile is <strong>{% if entity.public == 0 %}Public{% else %}Private{% endif %}</strong>.</p>
    </div>


{% endblock %}
