{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Profiles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>School/College</th>
                <th>Research</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.lastname }}, {{ entity.firstname }}</a></td>
                <td>{{ entity.college|raw }}</td>
                <td> {{ entity.research|raw }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
